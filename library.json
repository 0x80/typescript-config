{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "A Shared Library",
  "extends": "./base.json",
  "compilerOptions": {
    /* If transpiling with TypeScript: */
    "sourceMap": true,

    /* AND if you're building for a library: */
    "declaration": true,

    /* AND if you're building for a library in a monorepo: */
    "composite": true,
    "declarationMap": true
  }
}
